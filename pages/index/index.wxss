.index_swiper swiper {
  width: 750rpx;
  height: 375rpx;
}
.index_swiper swiper swiper-item image {
  width: 100%;
}
.index_category {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  padding-top: 20rpx;
  background-color: #f7f7f7;
}
.index_category navigator {
  flex: 1;
}
.index_category navigator image {
  width: 125rpx;
}
.index_category navigator p {
  display: flex;
  justify-content: center;
  align-items: center;
}
.index_hot_goods .index_hot_title {
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
  color: var(--themeColor);
  background-color: #E0E0E0;
}
.index_hot_goods .index_hot_goods_list {
  display: flex;
  flex-wrap: wrap;
}
.index_hot_goods .index_hot_goods_list .hot_goods_combine {
  margin: 15rpx;
  width: 46%;
  text-align: center;
}
.index_hot_goods .index_hot_goods_list .hot_goods_combine navigator image {
  background-color: #f5f5f5;
}
.index_hot_goods .index_hot_goods_list .hot_goods_combine navigator .hot_goods_name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.index_hot_goods .index_hot_goods_list .hot_goods_combine navigator .hot_goods_price {
  color: var(--themeColor);
}
