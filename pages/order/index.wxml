<view class="order_page">
  <!-- tab标题 -->
  <view class="order_tab_wrap">
    <view wx:for="{{tabs}}" wx:key="type" wx:for-item="tab" data-tabType="{{tab.type}}" bind:tap="handleTabTap" class="title_item {{tab.isActive?'active':''}}">
      {{tab.typeName}}
    </view>
  </view>


  <!--tab内容 订单信息-->
  <view class="tab_content_wrap">
    <view class="order_List" wx:for="{{orderList}}" wx:key="orderNo" wx:for-item="order">
      <view class="order_item_row">
        <!--第一行-->
        <view class="order_first_row">
          <view class="order_no">订单号：{{order.orderNo}}</view>
          <view class="order_no">交易状态：<orderStatus orderStatus="{{order.orderStatus}}"></orderStatus>
          </view>
        </view>
        <!--第二行 中间展示商品 todo-->
        <view class="order_second_row">
          <view class="order_goods_list" wx:for="{{order.goodsList}}" wx:for-item="goods" wx:key="goodsId">
            <view class="goods_item">
              <image mode="widthFix" src="{{baseUrl+'/images/'+goods.goodsImage}}"></image>
              <view class="goods_info_wrap">
                <view>{{goods.goodsName}}</view>
                <view>{{goods.price}}</view>
                <view>{{goods.num}}</view>
              </view>
            </view>
          </view>
        </view>
        <!--第三行-->
        <view class="order_third_row">
          <view class="order_no">创建时间：{{order.createTime}}</view>
          <view class="order_no">实付：{{order.payMoney}}</view>
        </view>

        <!--第四行 订单操作 按钮 todo-->
        <view class="order_fourth_row">
          <button class="order_fourth_row_button" type="default" size="mini" plain>申请退款</button>
          <button class="order_fourth_row_button" type="default" size="mini" plain>查看物流</button>
          <button class="order_fourth_row_button" type="warn" size="mini" plain>确认收货</button>
        </view>
      </view>
    </view>
  </view>

</view>