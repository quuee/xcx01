.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  margin-top: 10rpx;
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates .cates_container .left_menu .active {
  font-weight: bolder;
  color: var(--themeColor);
  border-left: 8rpx solid currentColor;
}
.cates .cates_container .right_content {
  flex: 5;
}
.cates .cates_container .right_content .label_list {
  padding: 30rpx 20rpx 30rpx 20rpx;
}
.cates .cates_container .right_content .label_list .label_title {
  font-weight: bolder;
  font-size: 36rpx;
}
.cates .cates_container .right_content .label_list .goods_list navigator {
  display: flex;
  margin: 10rpx;
  background-color: #F8F8F8;
}
.cates .cates_container .right_content .label_list .goods_list navigator image {
  flex: 2;
}
.cates .cates_container .right_content .label_list .goods_list navigator .goods_detail_right {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cates .cates_container .right_content .label_list .goods_list navigator .goods_detail_right .detail_goods_name {
  padding-top: 10rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cates .cates_container .right_content .label_list .goods_list navigator .goods_detail_right .detail_goods_price {
  padding-bottom: 10rpx;
}
